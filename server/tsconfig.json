{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@types": ["../types/index.ts"]
    },
    "types": ["node"], // remove this line if @types/node installed and you prefer auto detection
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "isolatedModules": true
  },
  "references": [
    { "path": "../types" },
    { "path": "../db" }
  ],
  "include": ["src", "tests", "src/types"],
  "exclude": ["dist"]
}